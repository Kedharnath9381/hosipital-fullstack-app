FROM node:18-alpine AS builder
WORKDIR /app
COPY Frontend-CICD/package.json Frontend-CICD/package-lock.json ./
RUN npm ci --only=production

COPY Frontend-CICD/ ./
RUN npm run build

FROM nginx:alpine
RUN addgroup -g 1001 -S nodejs && adduser -S react -u 1001
COPY --from=builder --chown=react:nodejs /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/nginx.conf
USER react
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]